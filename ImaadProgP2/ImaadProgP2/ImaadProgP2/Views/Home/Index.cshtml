@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Contract Monthly Claim System</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-size: cover;
            background-position: center;
            background-color:greenyellow;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin: 0;
        }

        .content {
            flex: 1;
        }

        .main-header {
            background-color: rgba(0, 0, 0, 0.6); /* Darker background for better contrast */
            color: #ffffff;
            padding: 80px 0;
            text-align: center;
            backdrop-filter: blur(10px);
        }

            .main-header h1 {
                font-size: 3.5rem;
                font-weight: 700;
                margin-bottom: 20px;
            }

            .main-header p {
                font-size: 1.3rem;
                margin-bottom: 30px;
            }

        .btn-primary {
            background-color: #007bff; /* Updated button color */
            border-color: #007bff;
            font-weight: bold;
            padding: 10px 20px;
            font-size: 1.1rem;
        }

            .btn-primary:hover {
                background-color: #0056b3; /* Darker shade on hover */
                border-color: #004085;
            }

        .features {
            margin-top: 50px;
            padding: 50px 0;
        }

        .feature-box {
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            background-color: #ffffff; /* White background for feature boxes */
        }

            .feature-box:hover {
                transform: translateY(-10px);
                box-shadow: 0 12px 24px rgba(0, 0, 0, 0.2);
            }

            .feature-box h3 {
                font-size: 1.5rem;
                margin-bottom: 15px;
                color: #0056b3; /* Feature title color */
            }

            .feature-box p {
                font-size: 1rem;
                color: #333; /* Darker text color for better readability */
            }

        .footer {
            background-color: #343a40;
            color: #f8f9fa;
            padding: 20px 0;
        }

            .footer a {
                color: #f8f9fa;
            }

                .footer a:hover {
                    color: #e0e0e0;
                }
    </style>
</head>
<body>

    <div class="content">
        <header class="main-header">
            <div class="container">
                <h1 class="display-4">Welcome to the Contract Monthly Claim System (CMCS)</h1>
                <p>Your streamlined solution for managing monthly claims efficiently.</p>
                <a href="/Claims/Create" class="btn btn-primary btn-lg">Submit a Claim</a>
            </div>
        </header>

        <section class="features text-center">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <div class="feature-box">
                            <h3>Easy Submissions</h3>
                            <p>Submit your monthly claims with just a few clicks.</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="feature-box">
                            <h3>Real-time Tracking</h3>
                            <p>Track the status of your claims anytime, anywhere.</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="feature-box">
                            <h3>Secure and Reliable</h3>
                            <p>Your data is safe with us, ensuring privacy and security.</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <!-- Footer -->
    <footer class="footer py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <h5>Contract Monthly Claim System (CMCS)</h5>
                    <p>© @DateTime.Now.Year Contract Monthly Claim System. All rights reserved.</p>
                </div>
                <div class="col-md-4 mb-3">
                    <h5>Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-white">Contact Us</a></li>
                        <li><a href="#" class="text-white">Privacy Policy</a></li>
                        <li><a href="#" class="text-white">Terms of Service</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5>Follow Us</h5>
                    <a href="#" class="text-white me-3"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="text-white me-3"><i class="fab fa-twitter"></i></a>
                    <a href="#" class="text-white"><i class="fab fa-linkedin-in"></i></a>
                </div>
            </div>
        </div>
    </footer>

</body>
</html>
